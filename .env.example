# Legal & General website credentials
LANDG_EMAIL=
LANDG_PASSWORD=
# Path to store Legal & General session cookies between runs
LANDG_COOKIES_FILE=./data/landg_cookies.json
# Timeout (in seconds) to enter SMS 2FA code via the UI when requested
LANDG_2FA_TIMEOUT=60

# Actual Budget API configuration
ACTUAL_SERVER_URL=
ACTUAL_PASSWORD=
ACTUAL_SYNC_ID=
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Enable shim for Node>=20 guard in @actual-app/api (daemon only)
ENABLE_NODE_VERSION_SHIM=false

# Logging level (info, debug, error)
LOG_LEVEL=info

# HTTP port for web UI server (daemon mode only; enables UI)
HTTP_PORT=3000

# Session-based Web UI authentication (disable login with UI_AUTH_ENABLED=false)
UI_AUTH_ENABLED=true

# Shared secret for signing session cookies (defaults to ACTUAL_PASSWORD)
SESSION_SECRET=

# Disable cron scheduling (daemon mode only; default: false)
DISABLE_CRON_SCHEDULING=false

# Cron schedule for sync (once an hour at :45)
SYNC_CRON=45 * * * *
SYNC_CRON_TIMEZONE=UTC

# Directory to persist data files (mapping file, cookies, etc.; default: ./data)
DATA_DIR=./data

# Directory to cache Actual Budget downloads (default: ./data/budget)
BUDGET_DIR=./data/budget

# Path to mapping file (relative to DATA_DIR; default: mapping.json)
MAPPING_FILE=mapping.json
