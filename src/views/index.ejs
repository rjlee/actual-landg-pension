<%- include('header', { title: 'actual-landg-pension' }) %>
<div class="container py-5">
  <div class="text-center mb-4">
    <h1 class="mb-0">actual-landg-pension</h1>
  </div>
  <div class="text-center mb-3">
    <span id="budgetStatus" class="badge bg-info">Budget downloading</span>
  </div>
<div id="landgLoginSection" class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <button id="loginBtn" class="btn btn-primary">
          Test Legal & General
        </button>
        <span id="authStatus" class="ms-2"></span>
      </div>
      <% if (uiAuthEnabled) { %>
      <form method="post" action="/logout">
        <button type="submit" class="btn btn-warning">Logout</button>
      </form>
      <% } %>
    </div>
    <div id="twofaSection" class="mt-3" style="display:none;">
      <label for="twofaCode" class="form-label">Enter SMS code:</label>
      <input id="twofaCode" type="text" class="form-control d-inline-block w-auto" placeholder="123456" maxlength="6">
      <button id="submit2faBtn" class="btn btn-secondary ms-2">Submit</button>
    </div>
    <div><span id="loginStatus" class="mt-2 d-block"></span></div>

    <div id="mappingForm">
      <table class="table table-bordered w-auto mb-3">
        <thead><tr>
          <th>Actual Account</th>
        </tr></thead>
        <tbody>
          <tr>
            <td>
              <select id="accountSelect" class="form-select">
                <option value="">-- none --</option>
              </select>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex align-items-center gap-2">
        <button id="saveBtn" class="btn btn-primary">Save Mapping</button>
        <button id="syncBtn" class="btn btn-success">Sync Now</button>
        <span id="status" class="ms-2"></span>
      </div>
    </div>
</div>
  <script src="/js/index.js"></script>
<%- include('footer') %>